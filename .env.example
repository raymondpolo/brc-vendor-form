# .env.example
# Rename this file to .env and fill in your actual values.
# DO NOT commit the .env file to version control.

# Flask App
SECRET_KEY='a-very-strong-and-random-secret-key'
DATABASE_URL='sqlite:///site.db' # Or 'postgresql://user:pass@host:port/dbname'

# Flask-Mail (Example for Gmail App Password)
MAIL_SERVER='smtp.googlemail.com'
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME='your-email@gmail.com'
MAIL_PASSWORD='your-gmail-app-password'
MAIL_DEFAULT_SENDER='Your App Name <your-email@gmail.com>'